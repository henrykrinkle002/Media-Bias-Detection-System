        "# version 4: self attention\n",
        "torch.manual_seed(1337)\n",
        "B,T,C = 4, 8, 32 # sample shape/values\n",
        "x = torch.randn(B,T,C) # of shape B,T,C\n",
        "\n",
        "\n",
        "# a single head performing self-attention\n",
        "head_size = 16\n",
        "\n",
        "#“Hey PyTorch, learn a matrix W_q of shape (C, head_size) to\n",
        "#project input embedding x (shape [B, T, C]) into a query vector\n",
        "#(shape [B, T, head_size]).”\n",
        "\n",
        "key = nn.Linear(C, head_size, bias=False) # C is the input size and head_size is the output size\n",
        "query = nn.Linear(C,  head_size, bias = False) # C is the embedding dimensions. Features of Token\n",
        "value = nn.Linear(C, head_size, bias = False)\n",
        "k = key(x)   # (B, T, 16) # attention equation\n",
        "q = query(x) # (B, T, 16)\n",
        "wei = q @ k.transpose(-2, -1) # (B, T, 16) @ (B, 16, T) => (B, T, T) transposes only the 2 and 1 dims leaves 0th dim\n",
        "\n",
        "\n",
        "tril = torch.tril(torch.ones(T,T))\n",
        "# wei = torch.zeros((T,T))\n",
        "wei = wei.masked_fill(tril == 0, float('-inf'))\n",
        "wei = F.softmax(wei, dim=-1) # normalize the distribution in wei to a sum of 1\n",
        "v = value(x)\n",
        "out = wei @ v\n",
        "out.shape"
      ],

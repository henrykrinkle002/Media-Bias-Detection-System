    {
      "cell_type": "code",
      "source": [
        "# mapping characters to integers\n",
        "stoi = { ch:i for i,ch in enumerate(chars) } #dictionary\n",
        "itos = { i:ch for i,ch in enumerate(chars) } #dictionary\n",
        "encode = lambda s: [stoi[c] for c in s] #encode is the function being called with the string\n",
        "decode = lambda l: ''.join([itos[i] for i in l]) #decode is another function being called with encoded term\n",
        "\n",
        "print(encode(\"hii there\"))\n",
        "print(decode(encode(\"hii there\")))"
      ],
